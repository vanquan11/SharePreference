<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txtcreateDate"
        app:layout_constraintBottom_toTopOf="@id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtName"
        app:layout_constraintTop_toBottomOf="@id/txtId"
        app:layout_constraintLeft_toLeftOf="@id/txtId"
        app:layout_constraintBottom_toTopOf="@id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtPrice"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintLeft_toLeftOf="@id/txtId"
        app:layout_constraintBottom_toTopOf="@id/txtPriceLarg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtPriceLarg"
        app:layout_constraintTop_toBottomOf="@id/txtPrice"
        app:layout_constraintLeft_toLeftOf="@id/txtId"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtcreateDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtId"
        app:layout_constraintBottom_toTopOf="@id/txtModifDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtModifDate"
        app:layout_constraintTop_toBottomOf="@id/txtcreateDate"
        app:layout_constraintLeft_toLeftOf="@id/txtcreateDate"
        app:layout_constraintBottom_toTopOf="@id/txtMaxQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtMaxQuan"
        app:layout_constraintTop_toBottomOf="@id/txtModifDate"
        app:layout_constraintLeft_toLeftOf="@id/txtcreateDate"
        app:layout_constraintBottom_toTopOf="@id/txtUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtUnit"
        app:layout_constraintTop_toBottomOf="@id/txtMaxQuan"
        app:layout_constraintLeft_toLeftOf="@id/txtcreateDate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/txtUnit"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>